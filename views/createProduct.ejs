<% include layout.ejs%>

<% include pageTitle%>
<div class="panel-body">

    <div class="container"
         data-ng-cloak
         data-ng-app="productModule"
         data-ng-controller="productCreateController">

        <form
                class="navbar-form navbar-left" role="search"
                method="POST"
                name="formProductCategory">

            <%include validationSummary.ejs%>
            <div class="row">
                <div class="form-group">
                    <label for="">Front Side</label>
                    &nbsp;&nbsp;

                    <input type="text"
                           class="form-control"
                           placeholder="Please Enter Product"
                           name="product"
                           id="product"
                           ng-model="product.FrontSide"
                           style="width:100%"
                           required>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="">Back Side</label>
                    &nbsp;&nbsp;

                    <input type="text"
                           class="form-control"
                           placeholder="Please Enter Product Cost"
                           name="productCost"
                           id="productCost"
                           ng-model="product.BackSide"
                           style="width:100%"
                           required>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="">Added By</label>
                    &nbsp;&nbsp;

                    <input type="text"
                           class="form-control"
                           placeholder="???"
                           name="productSelling"
                           id="productSelling"
                           ng-model="product.AddedBy"
                           style="width:100%"
                           required>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="productCategory">Deck</label>
                    <br>

                    <select
                        class="form-control"
                        name="productCategory"
                        id="productName"
                        ng-model="product.Decks_FK">

                        <option value="">Please Select Product Category</option>
                        <option
                            data-ng-repeat="productCategory in productCategories"
                            value={{productCategory.Id}}>{{productCategory.DeckName}}
                    </select>
                    </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="productDetails">Product Details</label>
             <textarea
                     class="form-control"
                     placeholder="Product Details"
                     name="productDetails"
                     id="productDetails"
                     rows="5"
                     cols="30"

                     ng-model="product.description"

                     style="width:100%"
                     required>


             </textarea>
                </div>
            </div>

            <div>&nbsp</div>
            <div class="row">
                <div class="form-group" style="padding-left:40%">
                    <button type="button" class="bin bin-primary"
                            ng-click="createProduct(product)"
                    >Create Product</button>
                </div>
            </div>


        </form>
    </div>
</div>
</div>





