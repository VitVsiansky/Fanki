<% include layout.ejs%>

<% include pageTitle%>

<br>

<div data-ng-app="productCategoryModule"
     data-ng-controller="deckManagementController">

    <div>
        <a href="/createProductCategory" class="btn btn-info" role="button">New Deck</a>

    </div>
    <div class="container">
        <% include productCategoryGrid%>
    </div>



    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button>
                    <h4 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this deck?</h4>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" data-ng-click="deleteProductCategory()">Delete Deck</button>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>





<div class="modal fade"
     id="DeckDetailsModalWindow"
     tabindex="-1"
     role="dialog"
     aria-labelledby="DeckDetailsModalWindow" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button>
                <b><h2 class="modal-title" id="exampleModalLabel"> Deck Details</h2></b>
            </div>
            <div class="modal-body">
                <p>
                    <b>Deck Name : </b>
                <div>{{productDetailsView.DeckName}}</div>

                </p>
                <hr>
                <p>
                    <b>Description : </b>
                <div>{{productDetailsView.Description}}</div>
                <hr>
                <p>
                    <b>Added By : </b>
                <div>{{productDetailsView.AddedBy}}</div>
                <hr>


                <div>{{productDetailsView.productReleaseDate}}</div>
            </div>
            <div class="modal-footer">
            </div>


        </div>

        </div>


